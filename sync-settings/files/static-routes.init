#!/bin/sh /etc/rc.common

# Needs to be started after network!
START=99
STOP=99

boot() {
	ubus call network restart

	while ! run-eos-command -c "bash timeout 5 bash -c 'echo -e \"config\nshow ip route\n\" | Cli -A -p15'"
  do
    echo "Try again running EOS command" | logger -t "sync-settings"
  done

  /usr/bin/sync-settings -v force-network-restart=true | logger -t "sync-settings"
}
